@model Benchain.FosilFreeFuture.Service.Models.ProjectModel;
<div class="row">
  <div class="col-12">
    <div class="card card-success">
      
      <div class="card-header">
        <h5 class="card-title font-weight-bolder">Start a new project</h5>
        <div class="card-tools">
          <button type="button" class="btn btn-tool" data-card-widget="collapse">
            <i class="fas fa-minus"></i>
          </button>
        </div>
      </div>
      
      <div class="card-body">
        <div class="row">
          <div class="col-12">
            @using (Html.BeginForm("CreateNewProject", "Initiator", FormMethod.Post))
            {

              <div class="row">
                <div class="col-2 col-form-label-lg">
                  Choose project name
                </div>
                <div class="col-5">
                  @Html.TextBoxFor(m => m.Name, new {@class = "form-control"})
                </div>
              </div>

              <div class="row">
                <div class="col-2 col-form-label-lg">
                  Choose project cost
                </div>
                <div class="col-5">
                  @Html.TextBoxFor(m => m.FundsNeeded, new {@class = "form-control"})
                </div>
              </div>

              <div class="row">
                <div class="col-2 col-form-label-lg">
                  Choose project location country
                </div>
                <div class="col-5">
                  @Html.TextBoxFor(m => m.Country, new {@class = "form-control"})
                </div>
              </div>

              <div class="row">
                <div class="col-2 col-form-label-lg">
                  Choose project description
                </div>
                <div class="col-5">
                  @Html.TextBoxFor(m => m.Description, new {@class = "form-control"})
                </div>
              </div>

              <div class="row  m-2">
                <div class="col-2 col-form-label-lg">
                  <button type="submit" class="btn btn-block bg-gradient-warning btn-lg">Save new project</button>
                </div>
              </div>
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
